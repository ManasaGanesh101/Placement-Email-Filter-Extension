{
    "manifest_version": 3,
    "name": "Placement Email Filter",
    "version": "1.0",
    "description": "Show only placement-related emails in Gmail.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon" :{
        "48": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  